<div class='contact-details'>

    {{!-- display name --}}

    <div class='contact-details__display-name'>
        {{displayName}}
    </div>
    
    {{!-- first name --}}

    <div class='contact-details__first-name'>
        {{#if edit}}
            <label>First name</label>
            {{input value=firstName}}
        {{else}}
            {{firstName}}
        {{/if}}
    </div>


    {{!-- last name --}}

    <div class='contact-details__last-name'>
        {{#if edit}}
            <label>Last name</label>
            {{input value=lastName}}
        {{else}}
            {{lastName}}
        {{/if}}
    </div>

    
    {{!-- address --}}

    <div class='contact-details__address'>
        {{#if edit}}
            <label>Address</label>
            {{textarea value=address cols=25 rows=3}}
        {{else}}
            {{address}}
        {{/if}}
    </div>


    {{!-- email --}}

    <div class='contact-details__email'>
        {{#if edit}}
            <label>Email</label>
            {{input type='email' value=email}}
        {{else}}
            {{email}}
        {{/if}}
    </div>



    {{!-- actions --}}

    <button class='close-details-button' {{action 'closeDetails'}}>
        ‚ùå
    </button>

    {{#if edit}}
        <button class='save-details-button' {{action 'save' model}}>
            Save
        </button>
    {{else}}
        <button class='edit-details-button' {{action 'switchToEditMode'}}>
            Edit
        </button>
    {{/if}}

    <button class='delete-contact-button' {{action 'delete' model}}>
        Delete
    </button>


</div>

{{outlet}}
